doctype html
html(lang='en')
  head
    title=title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='panels.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='resizable_panels.js', type='text/javascript')
    script(src='test.js', type='text/javascript')
    script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
  body
    #container.container-fluid
      h3.heading
        | My Annotations
      .row
        .col-sm-6
          p
            button#add_annotation.btn.btn-info.btn-md
              span.glyphicon.glyphicon-plus-sign
              |  Note
        .col-sm-6
          p
            button#add_image.btn.btn-info.btn-md(onclick='upload_img_prompt(event)')
              // <span class="glyphicon glyphicon-picture">
              span.glyphicon.glyphicon-plus-sign
              |  Image
      each note, index in notes
        if(note.info.type == "TXT")
          .row
            .col-md-12
              .panel.panel-primary.writable
                form.form(id="ajaxform", name='ajaxform')
                  .panel-heading.clickable.writable
                    h3.panel-title
                      input.annt_title(name='title', id="texttitle", type='text' value=note.info.title)
                    span.pull-right
                      button.btn.btn-primary.btn-sm(onclick='delete_annt(event)')
                        span.glyphicon.glyphicon-trash
                  .panel-body.writable
                    textarea.annt_body(name='body', id="textbody", type='text')=note.info.body
                  input(type='submit', value='Submit')
        if(note.info.type == "IMG")
          //add icons or whatever for images here
          .row
            .col-md-12
              img.img-thumbnail.thumbnail(src=note.info.img_dest width=100 height=80)
              button.btn.btn-primary.btn-xs(type='button', data-toggle='modal', data-target='#myModal') View image
              #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
                .modal-dialog
                  .modal-content
                    .modal-body
                      img.img-responsive(src=note.info.img_dest)
              p
 
    #book_display
      h3.heading
        | Book Display
        p
          input(type='button', value='Back to Book', onclick="location.href = 'http://localhost:80/'")
        div